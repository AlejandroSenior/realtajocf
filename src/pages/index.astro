---
import Layout from '@/layouts/Layout.astro';
import TeamCarousel from '@/components/TeamCarousel.astro';
import LeaderBoard from '@/components/LeaderBoard.vue';
import LastMatch from '@/components/LastMatch.astro';
import Calendar from '@/components/Calendar.vue';
import NextMatch from '@/components/NextMatch.astro';
---

<Layout>
  <section>
    <div class="relative w-fit">
      <img id="field-img" src="/images/team-bg.png" alt="Imagen de fondo" class="block w-dvw aspect-[1280/853]" />

      <div>
        <h1 id="team-name" class="absolute top-1/7 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white">Real Tajo C.F.</h1>
      </div>
      <img src="/images/team-without-bg.webp" alt="Foto equipo Real Tajo CF" class="absolute top-0 left-0 w-full h-full" />
    </div>
  </section>

  <TeamCarousel />

  <div class="max-w-7xl mx-auto">
    <LastMatch />

    <NextMatch />

    <LeaderBoard client:only="vue">
      <template #fallback>
        <div>Cargando clasificaci√≥n...</div>
      </template>
    </LeaderBoard>

    <Calendar client:only="vue">
      <template #fallback>
        <div>Cargando calendario...</div>
      </template>
    </Calendar>
  </div>
</Layout>

<style>
  #field-img {
    mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 100%);
  }

  #team-name {
    animation-duration: 3s;
    animation-name: slide-in;
    color: var(--color-primary);
    -webkit-text-stroke-width: clamp(1px, 2px, 4px);
    -webkit-text-stroke-color: var(--color-secondary);
    font-size: clamp(25px, 5vw, 120px);
  }

  @media (width <= 768px) {
    #team-name {
      -webkit-text-stroke-width: 0.7px;
    }
  }

  @keyframes slide-in {
    from {
      transform: translateY(2em);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
