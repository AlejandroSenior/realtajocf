---
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <section>
    <!-- <div class="hero"></div> -->
    <div class="relative w-fit">
      <img src="/images/team-bg.png" alt="Foto equipo Real Tajo CF" class="block w-dvw aspect-[1280/853]" />
      <h1
        id="team-name"
        class="absolute top-1/7 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white text-2xl md:text-6xl lg:text-9xl"
      >
        Real Tajo F.C
      </h1>
      <img src="/images/team-without-bg.png" alt="" class="absolute top-0 left-0 w-full h-full" />
    </div>

    <div class="p-10">
      <p class="text-red-600">Lorem ipsum dolor sit amet consectetur adipisicing elit...</p>
    </div>
  </section>
</Layout>

<style>
  .hero {
    aspect-ratio: 3 / 1;
    background-image: url('/images/team.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  #team-name {
    animation-duration: 3s;
    animation-name: slide-in;
  }

  @keyframes slide-in {
    from {
      transform: translateY(2em);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
